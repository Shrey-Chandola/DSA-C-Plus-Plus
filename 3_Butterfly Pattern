#include <iostream>
using namespace std;
int main()
{   int n=4, a=n, b=0; 
    for(int i=0; i<n; i++)
        {for(int j=0; j<=i; j++)
            {cout << "* ";
            }
         if(i!=(n-1) && a>0)
            {for(int j=0; j<(2*a)-2; j++)
                {cout << "  ";
                }
             a--;
            }
         for(int j=0; j<=i; j++)
            {cout << "* ";
            }
         cout << "\n";
        }
    for(int i=0; i<n; i++)
        {for(int j=n; j>i; j--)
            {cout << "* ";
            }
         for(int j=0; j<2*b; j++)
            {cout << "  ";
            }
         b++;
         for(int j=n; j>i; j--)
            {cout << "* ";
            }
         cout << "\n";
        }
    return 0;
}
